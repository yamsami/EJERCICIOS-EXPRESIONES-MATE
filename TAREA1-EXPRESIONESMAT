	resul= 260 / 12 + 54 % 3 - 85 % 7
	Escribir "el resultado de esta operacion es: " resul
FinFuncion 

Funcion ejercicio9(0)
	// Orden de procedencia:  (), ^ *, / mod div, + -
	// (48 < 2 * 3) | | (2 * 7 < 12)
	// Declararemos una variable logico cuyo nombre serà "resul" 
	// Realizamos el proceso de la operacion 
	// (48 < 2 * 3) | | (2 * 7 < 12)
	// (48 < 6) / /  (14 < 12)
	// ( Falso / / Falso )
	
	Escribir "EJERCICIO  9"
	Definir resul Como logico 
	resul = (48 < 2 * 3) o (2 * 7 < 12) 
	Escribir "el resultado de este ejercicio es: " resul
FinFuncion

Funcion ejercicio10(0)
	// Orden de procedencia:  (), ^ *, / mod div, + -
	// (8 > 2) | | (932 < 23) ) && 4 == 2
	// ( verdadero // Falso )  && 4 == 2
	// Verdadero && Falso
	
	Escribir "EJERCICIO  10"
	Definir resul Como Logico
	resul= ((8 > 2) o (932 < 23) ) o 4 == 2
	Escribir "el resultado de la operacion es: " resul 
FinFuncion

